<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Esperanza.View.Falar">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="texto">
                <Entry.Triggers>
                    <Trigger TargetType="Entry"
                     Property="IsFocused" Value="True">
                        <Setter Property="BackgroundColor" Value="Yellow" />
                    </Trigger>
                </Entry.Triggers>
            </Entry>
            <Button Text="Falar" Clicked="Falar_Clicked"  BorderRadius="25" BackgroundColor="LightSeaGreen" Margin="15,0,15,10"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>