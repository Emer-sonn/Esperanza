            <!--Braço Direito-->
            <Button  x:Name="BracoDireito" Clicked="BracoDireito_Clicked" AbsoluteLayout.LayoutBounds="0.30,.22,53,134"  AbsoluteLayout.LayoutFlags="PositionProportional" BackgroundColor="Transparent"/>
            <Button  x:Name="AnteBracoDireito" Clicked="AnteBracoDireito_Clicked" AbsoluteLayout.LayoutBounds="0.27,.39,52,97"   AbsoluteLayout.LayoutFlags="PositionProportional" BackgroundColor="Transparent"/>
            <Button  x:Name="MaoDireito" Clicked="MaoDireito_Clicked" AbsoluteLayout.LayoutBounds="0.22,.52,55,84"  AbsoluteLayout.LayoutFlags="PositionProportional" BackgroundColor="Transparent"/>

            <Button x:Name="nadegas"  Clicked="Nadegas_Clicked" AbsoluteLayout.LayoutBounds="0.50,0.47,144,115"  AbsoluteLayout.LayoutFlags="PositionProportional" BackgroundColor="Transparent"/>

            <!--<Button x:Name="zero" Text="Zero" Clicked="Zero_Clicked" AbsoluteLayout.LayoutBounds="0,0,100,100"  AbsoluteLayout.LayoutFlags="PositionProportional" BackgroundColor="Transparent"/>-->
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>