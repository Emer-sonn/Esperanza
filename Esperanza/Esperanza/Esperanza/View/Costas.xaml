            <!-- Perna Esquerda -->
            <Button x:Name="PernaEsquerda" Clicked="PernaEsquerda_Clicked" AbsoluteLayout.LayoutBounds="0.43,0.63,77,114"  AbsoluteLayout.LayoutFlags="PositionProportional" BackgroundColor="Transparent"/>
            <Button x:Name="JoelhoEsquerda"  Clicked="JoelhoEsquerda_Clicked" AbsoluteLayout.LayoutBounds="0.43,0.73,56,59"  AbsoluteLayout.LayoutFlags="PositionProportional" BackgroundColor="Transparent"/>
            <Button x:Name="panturilhaEsquerda" Clicked="PanturilhaEsquerda_Clicked" AbsoluteLayout.LayoutBounds="0.43,0.89,70,140"  AbsoluteLayout.LayoutFlags="PositionProportional" BackgroundColor="Transparent"/>
            <Button x:Name="PeEsquerda" Clicked="PeEsquerda_Clicked" AbsoluteLayout.LayoutBounds="0.43,0.97,58,45"   AbsoluteLayout.LayoutFlags="PositionProportional" BackgroundColor="Transparent"/>
            <!--Braço Esquerdo-->
            <Button  x:Name="BracoEsquedo" Clicked="BracoEsquedo_Clicked" AbsoluteLayout.LayoutBounds="0.70,.20,53,134"  AbsoluteLayout.LayoutFlags="PositionProportional" BackgroundColor="Transparent"/>
            <Button  x:Name="AnteBracoEsquedo" Clicked="AnteBracoEsquedo_Clicked" AbsoluteLayout.LayoutBounds="0.71,.39,52,97"  AbsoluteLayout.LayoutFlags="PositionProportional" BackgroundColor="Transparent"/>
